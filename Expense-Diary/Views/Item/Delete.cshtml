@model Expense_Diary.Models.Item

<form method="post" asp-action="DeleteItem">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Item</h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ItemName"></label>
                    </div>

                    <div class="col-4">
                        <label asp-for="Borrower"></label>
                    </div>

                    <div class="col-4">
                        <label asp-for="Lander"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ItemName" disabled class="form-control" />
                    </div>

                    <div class="col-4">
                        <input asp-for="Borrower" disabled class="form-control" />
                    </div>

                    <div class="col-4">
                        <input asp-for="Lander" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 text-center row">
                        <div class="col-4">
                            <input type="submit" class="btn btn-info w-75" value="Delete" />
                        </div>

                        <div class="col-4">
                            <a class="btn btn-danger w-75" asp-controller="Item" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>