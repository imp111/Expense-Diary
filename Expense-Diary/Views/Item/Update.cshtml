@model Expense_Diary.Models.Item

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ItemName"></label>
                    </div>

                    <div class="col-4">
                        <label asp-for="Borrower"></label>
                    </div>

                    <div class="col-4">
                        <label asp-for="Lander"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ItemName" class="form-control" />
                        <span asp-validation-for="ItemName" class="text-danger"></span>
                    </div>

                    <div class="col-4">
                        <input asp-for="Borrower" class="form-control" />
                        <span asp-validation-for="Borrower" class="text-danger"></span>
                    </div>

                    <div class="col-4">
                        <input asp-for="Lander" class="form-control" />
                        <span asp-validation-for="Lander" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 text-center row">
                        <div class="col-4">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>

                        <div class="col-4">
                            <a class="btn btn-danger w-75" asp-controller="Item" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>


