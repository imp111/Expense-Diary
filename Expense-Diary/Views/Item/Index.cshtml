@model IEnumerable<Expense_Diary.Models.Item>

<div class="container p-4">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List:</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-area="" asp-controller="Item" asp-action="CreateItem">Create New Item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Borrower
                    </th>
                    <th>
                        Lender
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="25%">@item.ItemName</td>
                        <td width="25%">@item.Borrower</td>
                        <td width="25%">@item.Lander</td>
                        <td width="25%">
                            <a class="btn btn-primary" asp-area="" asp-controller="Item" asp-action="DeleteItemPost">Delete</a>
                            <a class="btn btn-primary" asp-area="" asp-controller="Item" asp-action="DeleteItem">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>No items created yet!</h1>
    }

</div>
