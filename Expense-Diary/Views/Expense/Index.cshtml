@model IEnumerable<Expense_Diary.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense List:</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-area="" asp-controller="Expense" asp-action="CreateItem">Create New Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="30%">@expense.Name</td>
                        <td width="30%">@expense.Amount</td>
                        <td width="30%">buttons</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>No items created yet!</h1>
    }

</div>
