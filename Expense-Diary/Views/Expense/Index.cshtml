@model IEnumerable<Expense_Diary.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense List:</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-area="" asp-controller="Expense" asp-action="Create">Create New Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="35%">@expense.Name</td> <!-- table data - td -->
                        <td width="35%">@expense.Amount</td>
                        <td width="30%" class="w-100 btn-group" role="group">
                            <a class="btn btn-danger mx-1" asp-route-Id = "@expense.Id" asp-controller="Expense" asp-action="Delete">Delete</a>
                            <a class="btn btn-dark mx-1" asp-route-Id="@expense.Id" asp-controller="Expense" asp-action="Update">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>No items created yet!</h1>
    }

</div>
